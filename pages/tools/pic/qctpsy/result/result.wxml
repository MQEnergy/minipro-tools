<!--pages/tools/pic/qctpsy/result/result.wxml-->
<view class="y-p-20">
  <view class="content">
    <image src="{{fullUrl}}" mode="widthFix"></image>
  </view>
  <van-row gutter="10">
    <van-col span="8">
      <i-btn openType="share" iconClass="share" isPlain>推荐好友</i-btn>
    </van-col>
    <van-col span="16">
      <van-button custom-class="custom-btn" bindtap="handleDownload" type="info" color="#2755f3" block>
        保存到相册
      </van-button>
    </van-col>
  </van-row>
</view>
