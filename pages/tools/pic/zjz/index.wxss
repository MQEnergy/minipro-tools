/* pages/tools/pic/zjz/detail.wxss */
.container {
  padding: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 166px;
}

.footer-container {
  padding: 20rpx;
}

.footer-container .color-container {
  padding-bottom: 20rpx;
}

.size-container {
  position: fixed;
  top: 0rpx;
  width: 100%;
  left: 0;
  height: 88rpx;
}
.cell-container {
  border-bottom: 1px solid #ebedf0;
  margin-bottom: 20rpx;
}

.color-item {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #33333a;
}

/* we-cropper */
.cropper-wrapper {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: #e5e5e5;
  margin-top: 88rpx;
}
.cropper-text {
  width: 400rpx;
  margin: 0 auto;
  color: #666;
  font-size: 36rpx;
  text-align: center;
  padding-top: 50%;
  padding-left: 20rpx;
  padding-right: 20rpx;
}