/* pages/index/index.wxss */
.task {
  border-radius: 10rpx;
  overflow: hidden;
}
.task .num {
  height: 90rpx;
  background-color: #D9E5FF;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.num .free {
  width:180rpx;
  height:55rpx;
  border:none;
  background: linear-gradient(45deg, #537AFD 0%, #4A65F4 100%) !important;
}
.num .time {
  color: #5072FA;
  font-size: 28rpx;
  font-weight: bold;
}
.task .desc {
  height: 70rpx;
  background-color: #eac358;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 5px solid #c59e1f;
  color: #584402;
}

.upload-desc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
}

.m-20 {
  margin-bottom: 20rpx;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90%;
}
.block {
  width: 520rpx;
  text-align: center;
}
.content {
  position: absolute;
}
.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}