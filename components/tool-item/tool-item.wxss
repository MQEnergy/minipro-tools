/* components/tool-item/tool-item.wxss */
.title {
  margin: 10rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item {
  position: relative;
  width: 48.5%;
  padding: 10rpx 0;
}
.item .inner:active {
  background: #ebedf0;
}
.inner {
  width: 100%;
  background-color: #fff;
  padding: 32rpx 16rpx;
  border: 1px solid #ebedf0;
  border-radius: 12rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.inner .image {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  text-align: left;
  border-radius: 50%;
  margin-right: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.inner .desc .info {
  font-size: 26rpx;
  color: #999;
}
.inner .desc .tool-title {
  font-size: 32rpx;
  font-weight: bold;
}

.vip-badge {
  position: absolute;
  top: 10rpx;
  right: 0;
  border-top-right-radius: 12rpx;
  overflow: hidden;
}
.vip-badge image {
  width: 60rpx;
  height: 60rpx;
}

.mask-empty {
  background-color: #ebedf0;
  height: 40rpx;
  width: 200rpx;
}
.tag-container {
  background-color: #ebedf0;
  position: absolute;
  top: 10rpx;
  left: 0;
  overflow: hidden;
  color: #999;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-top-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}