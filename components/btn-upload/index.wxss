/* components/btn-upload/index.wxss */
.content {
  position: absolute;
  width: 100%;
  height: 400rpx;
  left: 50%;
  right: 50%;
  padding-top: -200rpx;
  transform: translate(-50%, -50%);
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  height: 400rpx;
  width: 600rpx;
}
.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}